{
    "version": 2,
    "builds": [
      { "src": "vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
      { "src": "server/server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/server.js" },
      { "src": "/(.*)", "dest": "/" }
    ]
  }
  